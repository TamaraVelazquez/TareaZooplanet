@model TareaZooplanet.Areas.Admin.Models.AgregarAdminEspecieViewModel;
@{
    Layout = "AdminLayout";
}
<article class="admin-card">
    <h2 class="admin-title">Agregar Nueva Especie</h2>

    <form class="admin-form" method="post" action="/Admin/Home/Agregar" enctype="multipart/form-data">
        @Html.ValidationSummary()
        <section class="form-group">
            <label for="especie" class="form-label">Nombre de la Especie</label>
            <input type="text" id="especie" class="form-input" placeholder="Ej: Águila Real" name="Especie" value="@(Model?.Especie ?? "")" required>
        </section>

        <section class="form-group">
            <label for="clase" class="form-label">Clase</label>
            <select id="clase" class="form-select" name="IdClase" required>
                @foreach (var c in Model.Clases)
                {
                    <option value="@c.Id">@c.Nombre</option>
                }
            </select>
        </section>

        <section class="form-group">
            <label for="habitat" class="form-label">Hábitat</label>
            <input type="text" id="habitat" class="form-input" placeholder="Ej: Montañas, Bosques, Lagos..." name="Habitat" value="@(Model?.Habitat ?? "")" required>
        </section>

        <section class="form-group">
            <label for="peso" class="form-label">Peso (kg)</label>
            <input type="number" id="peso" class="form-input" step="0.01" placeholder="Ej: 6.50" name="Peso" value="@(Model.Peso)" required>
        </section>

        <section class="form-group">
            <label for="tamaño" class="form-label">Tamaño (cm)</label>
            <input type="number" id="tamaño" class="form-input" placeholder="Ej: 95" name="Tamaño" value="@(Model.Tamaño)" required>
        </section>

        <section class="form-group">
            <label for="imagen" class="form-label">Imagen</label>
            <input type="file" id="imagen" class="form-file" accept="image/*" name="Imagen" required>
        </section>

        <section class="form-group">
            <label for="observaciones" class="form-label">Observaciones</label>
            <textarea id="observaciones" class="form-textarea" placeholder="Descripción y características de la especie..." name="Observaciones" value="@(Model?.Observaciones ?? "")" required></textarea>
        </section>

        <section class="btn-group">
            <button type="submit" class="btn btn-success">Guardar Especie</button>
            <a href="~/Admin/Home/Index" class="btn btn-secondary">Cancelar</a>
        </section>
    </form>
</article>